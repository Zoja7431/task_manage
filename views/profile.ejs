<% console.log('Rendering profile.ejs with:', { user: user, errors: errors }); %>
<%- include('base', { 
  body: `
    <div id="profile-page" class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body p-5">
            <h3 class="card-title text-center mb-4">Профиль пользователя</h3>
            <div class="text-center mb-4">
              <span class="avatar large-avatar mx-auto d-block mb-3">
                <svg width="120" height="120" viewBox="0 0 120 120">
                  <circle cx="60" cy="60" r="60" fill="${user.avatar || '#528bff'}" />
                  <text x="50%" y="55%" dominant-baseline="middle" text-anchor="middle" fill="#fff" font-size="60" font-family="Arial Black, sans-serif" font-weight="900">
                    ${user && user.username ? user.username.charAt(0).toUpperCase() : 'U'}
                  </text>
                </svg>
              </span>
            </div>
            <form method="POST" action="/profile">
              <div class="mb-3">
                <label for="profileUsername" class="form-label">Имя пользователя</label>
                <input type="text" class="form-control" id="profileUsername" name="username" value="${user && user.username ? user.username : ''}" required>
              </div>
              <div class="mb-3">
                <label for="profileEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="profileEmail" name="email" value="${user && user.email ? user.email : ''}" required>
              </div>
              <div class="mb-3">
                <label for="profilePassword" class="form-label">Новый пароль</label>
                <input type="password" class="form-control" id="profilePassword" name="password">
                <div class="form-text">Введите новый пароль, если хотите изменить текущий. Оставьте пустым для сохранения старого.</div>
              </div>
              <div class="mb-3">
                <label for="profileConfirmPassword" class="form-label">Подтверждение пароля</label>
                <input type="password" class="form-control" id="profileConfirmPassword" name="confirm_password">
                <div class="form-text">Повторите новый пароль для подтверждения (только если меняете пароль).</div>
              </div>
              <div class="mb-3">
                <label for="profileAvatarColor" class="form-label">Цвет аватарки</label>
                <input type="color" class="form-control form-control-color" id="profileAvatarColor" name="avatar" value="${user && user.avatar ? user.avatar : '#528bff'}">
              </div>
              <button type="submit" class="btn btn-primary w-100 mb-3">Сохранить изменения</button>
              <div class="text-center">
                <form method="POST" action="/logout">
                  <button type="submit" class="btn btn-outline-danger">Выйти</button>
                </form>
              </div>
            </form>
            ${errors && Array.isArray(errors) ? errors.map(error => `<div class="alert alert-danger mt-3">${error.msg}</div>`).join('') : ''}
          </div>
        </div>
      </div>
    </div>
  `
}) %>