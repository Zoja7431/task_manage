<% console.log('Rendering home.ejs with:', { 
  user: typeof user !== 'undefined' ? user : null, 
  tasks: typeof tasks !== 'undefined' ? tasks : [], 
  tags: typeof tags !== 'undefined' ? tags : [], 
  statusFilter: typeof statusFilter !== 'undefined' ? statusFilter : '', 
  priorityFilter: typeof priorityFilter !== 'undefined' ? priorityFilter : '', 
  tagFilter: typeof tagFilter !== 'undefined' ? tagFilter : [] 
}); %>
<%- include('base', { 
  body: `
    <div id="home-page" class="container my-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Мои задачи</h2>
        <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#taskForm">
          Новая задача
        </button>
      </div>

      <!-- Форма создания задачи -->
      <div class="collapse mb-4" id="taskForm">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Добавить задачу</h5>
            <form id="createTaskForm" method="POST" action="/tasks">
              <div class="mb-3">
                <label for="taskTitle" class="form-label">Название</label>
                <input type="text" class="form-control" id="taskTitle" name="title" required>
              </div>
              <div class="accordion" id="optionalFields">
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed add-optional" type="button" data-bs-toggle="collapse" data-bs-target="#dueDateCollapse">
                      <i class="bi bi-calendar-event me-2"></i> Добавить дату
                    </button>
                  </h2>
                  <div id="dueDateCollapse" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <label for="taskDueDate" class="form-label">Срок выполнения</label>
                      <input type="datetime-local" class="form-control date-picker" id="taskDueDate" name="due_date">
                    </div>
                  </div>
                </div>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed add-optional" type="button" data-bs-toggle="collapse" data-bs-target="#descriptionCollapse">
                      Добавить описание
                    </button>
                  </h2>
                  <div id="descriptionCollapse" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <label for="taskDescription" class="form-label">Описание</label>
                      <textarea class="form-control" id="taskDescription" name="description" rows="2"></textarea>
                    </div>
                  </div>
                </div>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed add-optional" type="button" data-bs-toggle="collapse" data-bs-target="#tagsCollapse">
                      Добавить теги
                    </button>
                  </h2>
                  <div id="tagsCollapse" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <label class="form-label">Теги</label>
                      <div class="tag-list d-flex flex-wrap gap-2 mb-2" id="taskTagList">
                        ${(typeof tags !== 'undefined' ? tags : []).map(tag => `
                          <div class="tag-wrapper d-flex align-items-center">
                            <button type="button" class="btn btn-sm btn-outline-secondary tag-item" data-value="${tag.name}" ondblclick="editTagInline('${tag.name}', 'taskTagList')">${tag.name}</button>
                            <button type="button" class="btn btn-sm btn-outline-danger tag-delete d-none" data-value="${tag.name}" onclick="confirmDeleteTag('${tag.name}')"><i class="bi bi-dash-circle"></i></button>
                          </div>
                        `).join('')}
                      </div>
                      <input type="hidden" id="taskSelectedTags" name="tags">
                      <div class="d-flex gap-2">
                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newTagModal">+ Добавить тэг</button>
                        <button type="button" class="btn btn-sm btn-outline-danger toggle-delete-mode" data-target="taskTagList">Удалить тэги</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed add-optional" type="button" data-bs-toggle="collapse" data-bs-target="#priorityCollapse">
                      Добавить приоритет
                    </button>
                  </h2>
                  <div id="priorityCollapse" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <label for="taskPriority" class="form-label">Приоритет</label>
                      <select class="form-select" id="taskPriority" name="priority">
                        <option value="low">Низкий</option>
                        <option value="medium" selected>Средний</option>
                        <option value="high">Высокий</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary mt-3">Добавить задачу</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Фильтры -->
      <div class="card mb-4">
        <div class="card-body py-2">
          <form method="GET" action="/" id="filterForm">
            <div class="d-flex align-items-center gap-2">
              <a href="/" class="btn btn-sm btn-outline-secondary reset-filter" title="Сбросить фильтр"><i class="bi bi-x"></i></a>
              <span class="text-muted">Сортировать по:</span>
              <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  ${priorityFilter ? priorityFilter.charAt(0).toUpperCase() + priorityFilter.slice(1) : 'Приоритеты'}
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li><a class="dropdown-item" href="?priority=">Все</a></li>
                  <li><a class="dropdown-item" href="?priority=high">Высокий</a></li>
                  <li><a class="dropdown-item" href="?priority=medium">Средний</a></li>
                  <li><a class="dropdown-item" href="?priority=low">Низкий</a></li>
                </ul>
              </div>
              <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  ${tagFilter.length ? tagFilter.join(', ') : 'Теги'}
                </button>
                <div class="dropdown-menu dropdown-menu-dark p-3">
                  <input type="text" class="form-control tag-search mb-2" id="filterTagSearch" placeholder="Поиск тэга..." onkeyup="filterTags(this, 'filterTagList')" onkeypress="preventSubmit(event)">
                  <div class="tag-list d-flex flex-wrap gap-2 mb-2" id="filterTagList">
                    ${(typeof tags !== 'undefined' ? tags : []).map(tag => `
                      <button type="button" class="btn btn-sm btn-outline-secondary tag-item ${tagFilter.includes(tag.name) ? 'active' : ''}" data-value="${tag.name}">${tag.name}</button>
                    `).join('')}
                  </div>
                  <input type="hidden" id="filterSelectedTags" name="tags" value="${tagFilter.join(',')}">
                </div>
              </div>
              <button type="submit" class="btn btn-sm btn-primary">Применить</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Список активных задач -->
      <h3 class="mb-3">Активные задачи</h3>
      <div id="active-tasks" class="list-group mb-5">
        ${(typeof tasks !== 'undefined' ? tasks : []).filter(task => task.status !== 'completed').map(task => `
          <div class="task-card card mb-3 ${task.priority === 'high' ? 'priority-high' : task.priority === 'medium' ? 'priority-medium' : 'priority-low'}">
            <div class="card-body">
              <div class="d-flex align-items-start">
                <div class="custom-checkbox me-3 mt-2">
                  <input type="checkbox" id="task-${task.id}" onclick="markCompleted('${task.id}', this)" ${task.status === 'completed' ? 'checked' : ''}>
                  <label for="task-${task.id}"></label>
                </div>
                <div class="flex-grow-1">
                  <h5 class="card-title mb-1">${task.title}</h5>
                  ${task.description ? `<p class="card-text text-muted small">${task.description}</p>` : ''}
                  <div class="d-flex flex-wrap align-items-center mt-2">
                    <span class="badge priority-badge priority-${task.priority} me-2 mb-1">${task.priority.charAt(0).toUpperCase() + task.priority.slice(1)}</span>
                    ${task.due_date ? `<span class="badge date-badge me-2 mb-1"><i class="bi bi-calendar me-1"></i>${new Date(task.due_date).toLocaleString('ru-RU', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' })}</span>` : ''}
                    ${(task.Tags || []).map(tag => `<span class="badge tag-badge me-2 mb-1">${tag.name}</span>`).join('')}
                  </div>
                </div>
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-dark">
                    <li><a class="dropdown-item" href="#" onclick="openEditModal('${task.id}')">Редактировать</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><form action="/tasks/${task.id}/delete" method="POST"><button class="dropdown-item text-danger" type="submit">Удалить</button></form></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        `).join('')}
      </div>

      <!-- Кнопки для завершённых задач -->
      <div class="d-flex gap-2 mb-3">
        <button type="button" class="btn btn-outline-secondary show-completed" data-bs-toggle="collapse" data-bs-target="#completedCollapse">
          Показать завершённые
        </button>
      </div>

      <!-- Список завершённых задач -->
      <div class="collapse" id="completedCollapse">
        <h3 class="mb-3">Завершённые задачи</h3>
        <button type="button" class="btn btn-outline-danger mb-3 clear-completed-btn" data-bs-toggle="modal" data-bs-target="#clearCompletedModal">
          Очистить завершённые
        </button>
        <div id="completed-tasks" class="list-group">
          ${(typeof tasks !== 'undefined' ? tasks : []).filter(task => task.status === 'completed').map(task => `
            <div class="task-card card mb-3 ${task.priority === 'high' ? 'priority-high' : task.priority === 'medium' ? 'priority-medium' : 'priority-low'} task-completed">
              <div class="card-body">
                <div class="d-flex align-items-start">
                  <div class="custom-checkbox me-3 mt-2">
                    <input type="checkbox" id="task-${task.id}" onclick="markCompleted('${task.id}', this)" checked>
                    <label for="task-${task.id}"></label>
                  </div>
                  <div class="flex-grow-1">
                    <h5 class="card-title mb-1 task-title">${task.title}</h5>
                    ${task.description ? `<p class="card-text text-muted small">${task.description}</p>` : ''}
                    <div class="d-flex flex-wrap align-items-center mt-2">
                      <span class="badge priority-badge priority-${task.priority} me-2 mb-1">${task.priority.charAt(0).toUpperCase() + task.priority.slice(1)}</span>
                      ${task.due_date ? `<span class="badge date-badge me-2 mb-1"><i class="bi bi-calendar me-1"></i>${new Date(task.due_date).toLocaleString('ru-RU', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' })}</span>` : ''}
                      ${(task.Tags || []).map(tag => `<span class="badge tag-badge me-2 mb-1">${tag.name}</span>`).join('')}
                    </div>
                  </div>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark">
                      <li><a class="dropdown-item" href="#" onclick="openEditModal('${task.id}')">Редактировать</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><form action="/tasks/${task.id}/delete" method="POST"><button class="dropdown-item text-danger" type="submit">Удалить</button></form></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          `).join('')}
        </div>
      </div>

      <!-- Модальное окно для редактирования -->
      <div class="modal fade" id="editTaskModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Редактирование задачи</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <form id="editTaskForm">
                <input type="hidden" id="editTaskId">
                <div class="mb-3">
                  <label for="editTaskTitle" class="form-label">Название</label>
                  <input type="text" class="form-control" id="editTaskTitle" name="title" required>
                </div>
                <div class="mb-3">
                  <label for="editTaskDueDate" class="form-label">Срок выполнения</label>
                  <input type="datetime-local" class="form-control date-picker" id="editTaskDueDate" name="due_date">
                </div>
                <div class="mb-3">
                  <label for="editTaskPriority" class="form-label">Приоритет</label>
                  <select class="form-select" id="editTaskPriority" name="priority">
                    <option value="low">Низкий</option>
                    <option value="medium">Средний</option>
                    <option value="high">Высокий</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label class="form-label">Теги</label>
                  <div class="tag-list d-flex flex-wrap gap-2 mb-2" id="editTaskTagList">
                    ${(typeof tags !== 'undefined' ? tags : []).map(tag => `
                      <div class="tag-wrapper d-flex align-items-center">
                        <button type="button" class="btn btn-sm btn-outline-secondary tag-item me-1" data-value="${tag.name}" ondblclick="editTagInline('${tag.name}', 'editTaskTagList')">${tag.name}</button>
                        <button type="button" class="btn btn-sm btn-outline-danger tag-delete d-none" data-value="${tag.name}" onclick="confirmDeleteTag('${tag.name}')"><i class="bi bi-dash-circle"></i></button>
                      </div>
                    `).join('')}
                  </div>
                  <input type="hidden" id="editTaskSelectedTags" name="tags">
                  <div class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newTagModal">+ Добавить тэг</button>
                    <button type="button" class="btn btn-sm btn-outline-danger toggle-delete-mode" data-target="editTaskTagList">Удалить тэги</button>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="editTaskDescription" class="form-label">Описание</label>
                  <textarea class="form-control" id="editTaskDescription" name="description" rows="3"></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
              <button type="button" class="btn btn-primary" onclick="saveTaskChanges()">Сохранить</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Модальное окно для нового тэга -->
      <div class="modal fade" id="newTagModal" tabindex="-1">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Добавить тэг</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <input type="text" class="form-control" id="newTagName" placeholder="Название тэга">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
              <button type="button" class="btn btn-primary" onclick="createTag()">Добавить</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Модальное окно для подтверждения удаления тэга -->
      <div class="modal fade" id="deleteTagModal" tabindex="-1">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Удалить тэг</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <p id="deleteTagMessage">Вы уверены, что хотите удалить тэг?</p>
              <input type="hidden" id="deleteTagName">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
              <button type="button" class="btn btn-danger" onclick="deleteTag()">Удалить</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Модальное окно для очистки завершённых -->
      <div class="modal fade" id="clearCompletedModal" tabindex="-1">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Очистить завершённые</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <p>Вы точно хотите очистить список завершённых задач?</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
              <button type="button" class="btn btn-danger" onclick="clearCompletedTasks()">Да, уверен</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  `
}) %>