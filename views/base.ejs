                              <circle cx="20" cy="20" r="20" fill="<%= user.avatar || '#528bff' %>" />
                              <text x="50%" y="52%" dominant-baseline="middle" text-anchor="middle" fill="#fff" font-size="20" font-family="Arial Black" font-weight="bold">
