<%- include('base', { 
  body: `
    <div class="container my-4">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Ошибка: ${error || 'Внутренняя ошибка сервера'}</h4>
        <hr>
        ${stack ? `
          <pre style="background-color: #3a3a3a; padding: 15px; border-radius: 5px; font-size: 0.9em; white-space: pre-wrap; max-height: 400px; overflow-y: auto;">
            ${stack}
          </pre>
        ` : ''}
        <a href="/log" class="btn btn-primary mt-3">Просмотреть лог</a>
        <a href="/" class="btn btn-secondary mt-3">Вернуться на главную</a>
      </div>
    </div>
  `
}) %>